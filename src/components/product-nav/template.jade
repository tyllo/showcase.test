// components/product-sort

include ../custom-input/template

mixin a(model)
  a(href="#"
    v-class="sort-up : toggleClass('#{model}', true), sort-down : toggleClass('#{model}', false)"
    v-on="click: toggleOrder('#{model}')"
  ): block

#product-nav.product-nav
  .product-nav--block__title Ноутбуки
  .product-nav--block Сортировать по:
  .product-nav--block: +a('novelty') новинкам
  .product-nav--block: +a('price') цене
  .product-nav--block: +a('bestseller') популярности
  .product-nav--block
    +input('small')
      input(type="checkbox" v-on="click: toggleFilter()")
      span В наличии
  .product-nav--block
    a.product-nav--sort-plitka(href="#")
  .product-nav--block
    a.product-nav--sort-list(href="#")


// /components/product-sort
